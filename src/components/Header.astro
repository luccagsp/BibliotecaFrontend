---
import { User } from "./User"
---

<header class="sticky z-50 bg-white top-0 p-4 flex justify-between flex-row lg:px-20 bg-opacity-50 border-b-[1px]">
  <div class="left flex items-center">
    <a href="/" class="text-3xl">BibliotecaProA</a>
  </div>
  <div class="right flex flex-row itece">
    <a class="bookContainer" href="/actualBook">
      <img src="/book.svg" class="relative w-10 h-10 " alt="book">
    </a>
    <User client:load></User>
  </div>
</div>
</header>

<style>
  header {
  backdrop-filter: blur(10px); /* Aplica el efecto de blur */
  -webkit-backdrop-filter: blur(10px); /* Soporte para Safari */
}

.sticky {
  position: sticky;
  top: 0;
  z-index: 50;
}


</style>