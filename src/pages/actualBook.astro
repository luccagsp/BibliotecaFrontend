import { BookCard } from "../components/BookCard";
import { BookActual } from "../components/BookActual.jsx";
import Header from "../components/Header.astro";
---

<Layout title="Biblioteca">
    <Header/>
    <PopupReserve client:load></PopupReserve>
    <PopupLogin client:load></PopupLogin>
    <PopupSuccess client:load></PopupSuccess>
    <PopupError client:load></PopupError>
    
    <main
    class="container mx-auto flex justify-center items-center flex-col bg-none relative min-h-screen"
    >
    <h3 class="text-4xl font-bold my-8">Libro actualmente reservado:</h3>
    <BookActual client:load>
    </BookActual>
    </main>
    
    <footer></footer>
</Layout>

<style>
  .fullscreen {
    position: fixed;
    height: 100vh;
    z-index: 1000;
    width: 100%;
    background-color: #34343475;
  }
  .grilla {
    width: 80dvw;
    height: auto;
    display: grid;
    gap: 5px;
  }
  footer {
    margin-top: 100px;
    width: 100%;
    height: 200px;
    background-color: #2b2b2b;
  }
</style>

