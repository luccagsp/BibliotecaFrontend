interface Book {
  autor: string;
  name: string;
  userId: any;
}
async function getBooks(): Promise<Book[] | []> {
  try {
    const res = await fetch(`http://localhost:3000/api/books`);
    const data = await res.json();
    return data;
  } catch (error) {
    console.log(error)
    return [];
  }
}
const books = await getBooks();
